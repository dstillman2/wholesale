{{>./default/base/header}}
{{>./default/base/sidebar_overlay}}
<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-9 col-md-push-3">
        <div class="page-header text-center">
          <h1>Contact Us</h1>
        </div>
        <div class="title-group">
          <h2 class="title">Send a Message</h2>
          <p style="margin-top:10px;">Leave us a message and we will get back to you as soon as possible.</p>
        </div>
        <div id="error-message" style="color: red; font-size: 1.1em;"></div>
        <div id="success-message" style="font-size: 1.1em;"></div>
        <form action="#" onsubmit="ecom.onSendMessage(event)" class="contact-form">
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <label>Name <span class="text-red">*</span></label>
                <input type="text" name="first_name" class="form-control" placeholder="Name">
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <label>Email <span class="text-red">*</span></label>
                <input type="email" name="email_address" class="form-control" placeholder="Email Address">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <div class="form-group">
                <label>Message <span class="text-red">*</span></label>
                <textarea cols="30" name="message" rows="10" class="form-control" placeholder="Message"></textarea>
              </div>
            </div>
          </div>
          <div class="clearfix">
            <input type="submit" id="btn-contact" class="btn btn-primary min-width" value="Send Message">
          </div>
        </form>
        <div class="title-group">
          <h2 class="title">Our Location</h2>
        </div>
        <div class="map">
          {{>./default/components/address_banner}}
        </div>
      </div>
      {{>./default/base/sidebar}}
    </div>
  </div>
</div>
{{>./default/base/footer}}
