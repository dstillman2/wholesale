{{>./default/base/header}}
{{>./default/base/sidebar_overlay}}
<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-9 col-md-push-3">
        <div class="page-header text-center">
          <h1>Forgot Password</h1>
          <p class="text-center" style="margin-top:15px;">
            Need help signing in? <a href="/contact">Contact us here.</a>
          </p>
        </div>
        <div class="checkout-tabs">
          <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="account">
              <div class="title-group">
                <h2 class="title">Reset Your Password</h2>
              </div>
              <div id="error-message" style="color: #FF0000;"></div>
              <div id="success-message" style="color: #000;"></div>
              <div style="">
                <form
                  action="#"
                  onsubmit="ecom.onForgotPassword(event);return false;"
                  class="signup-form target-area active"
                >
                  <div class="row">
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label for="email">Email Address <span class="text-red">*</span></label>
                        <input
                          type="email"
                          name="email_address"
                          placeholder="i.e. johndoe@gmail.com"
                          id="email"
                          class="form-control"
                          required
                        />
                      </div>
                    </div>
                  </div>
                  <div>
                    <div
                      class="clearfix form-action"
                      style="display: inline-block"
                    >
                      <input
                        id="btn-submit"
                        onclick="ecom.onForgotPassword(event);return false;"
                        type="submit"
                        class="btn btn-primary min-width"
                        value="Reset Password"
                      />
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <a
                        href="/sign-in"
                        style="display:inline-block;margin-top: 15px;"
                      >
                        <u>Sign In</u>
                      </a>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{>./default/base/sidebar}}
    </div>
  </div>
</div>
{{>./default/base/footer}}
